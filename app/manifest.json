{
  "manifest_version": 2,
  "name": "cranmo - R CRAN Package Description Mouseover",
  "short_name": "cranmo",
  "description": "Fetches and displays descriptions of CRAN package links on mouseover",
  "version": "1.0",

  "author": "Altan Orhon",
  "homepage_url" : "https://github.com/orhmeh09/cranmo",
  "icons": {
    "128": "cranmo128.png"
  },
  "options_page": "options/options.html",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [ "*://*.r-project.org/*", "*://*.rstudio.com/*", "*://*.r-bloggers.com/*", "*://*.r-pkg.org/*"],
      "js": ["lib/jquery-3.2.1.min.js", "lib/jquery.hoverintent.js", "lib/CRANMirrors.js", "content.js"]
    }
  ]
}
